extends layout

block content
	- eventsByDate = {};
	- var d;
	- for(var i in events)
		-	d = new Date(events[i].dateTime)
		-	events[i].id = i;
		-	events[i].dateTime = d;
		-	if(!eventsByDate.hasOwnProperty(d.getDate()))
			-	eventsByDate[d.getDate()] = [];
		-	eventsByDate[d.getDate()].push(events[i]);
	.row	
		.span16
			table.table.table-bordered
				tr
					th Sunday
					th Monday
					th Tuesday
					th Wednesday
					th Thurdays
					th Friday
					th Saturday
				tr
				- var count = 1;
				each day in days
					if (count == 8 || count == 15 || count == 22 || count == 29)
						tr
					- var date = Date.now();
					- var date = new Date(date);
					- var date = date.getDate();
					if(date != day)
						td.calCell(id='cell_'+day)= day
							if(eventsByDate.hasOwnProperty(day))
								each event in eventsByDate[day]
									br
									= event.name
					else
						td.calCell.current(id='cell_'+day)= day
							if(eventsByDate.hasOwnProperty(day))
								each event in eventsByDate[day]
									br
									= event.name
					- count++;

		.span9
			h1= month+' - Events'
			table.table.table-striped(id='eventList')
				tr
					th Date
					th Event
					th Time
					th Location
					th Description
				each events, day in eventsByDate
					each event in events
						tr
							- var date = new Date(event.dateTime);
							- var time = date.getHours();
							- var min = date.getMinutes().toString();
							- var ampm = 'AM';
							- if(time > 12){ time = time - 12; ampm = 'PM' }
							- if(min.length == 1){ min = '0'+date.getMinutes().toString() }
							td(width='40px')= (date.getMonth()+1)+"/"+date.getDate()
							td= event.name
							td= time+":"+min+ampm
							td= event.location
							td= event.info
	include marquee